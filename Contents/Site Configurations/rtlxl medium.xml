<?xml version="1.0" encoding="UTF-8"?>
<site site="http://.*\.rtl\.nl.*#Medium"
	plugin="silverlight"
	initialState="wait-for-frame-load"
	version="2.0">

	<setCookie domain="www.rtl.nl" path="/" name="quality" secure="false" value="Medium" />
	<setCookie domain="www.rtl.nl" path="/" name="DefaultVolumeValue" secure="false" value="1" />

	<crop x="0" y="0" width="0" height="0" />

	<seekbar type="thumb">
		<start x="110" y="-39" />
		<end x="-254" y="-39" />
		<played>
			<color rgb="fe9800" />
		</played>
	</seekbar>

	<!-- Wait-for-frame-load -->
	<state name="wait-for-frame-load">
		<event>
			<condition>
				<frameLoaded />
			</condition>
			<action>
				<goto state="playing" />
			</action>
		</event>
	</state>

	<!-- Playing -->
	<state name="playing">
		<event>
			<condition>
				<command name="pause" />
			</condition>
			<action>
				<click x="36" y="-39" />
				<goto state="paused" />
			</action>
		</event>

		<!-- Video ends -->
		<event>
			<condition>
				<url matches="pos=postroll" />
			</condition>
			<action>
				<goto state="end" />
			</action>
		</event>
	</state>

	<!-- Paused -->
	<state name="paused">
		<event>
			<condition>
				<command name="play" />
			</condition>
			<action>
				<click x="36" y="-39" />
				<goto state="playing" />
			</action>
		</event>
	</state>
</site>